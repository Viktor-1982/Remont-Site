{
  "name": "repair-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "fix-mdx": "node scripts/fix-mdx-format.js",
    "dev": "concurrently \"next dev\" \"contentlayer2 dev\"",
    "build": "contentlayer2 build && next build",
    "start": "next start",
    "lint": "eslint . --ext ts,tsx,js,jsx",
    "type-check": "tsc --noEmit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:lighthouse": "npx lighthouse-ci autorun",
    "test:lighthouse:simple": "npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "test:all": "npm run lint && npm run type-check && npm run test:unit && npm run test:e2e",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.4.0",
