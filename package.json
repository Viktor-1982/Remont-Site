    "@tailwindcss/typography": "^0.5.19",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "contentlayer2": "^0.5.8",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.22",
    "geist": "^1.4.2",
    "googleapis": "^164.1.0",
    "lucide-react": "^0.542.0",
    "next": "^15.5.2",
    "next-contentlayer2": "^0.5.8",
    "next-themes": "^0.4.6",
    "process": "^0.11.10",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "reading-time": "^1.5.0",
    "slugify": "^1.6.6",
    "tailwind-merge": "^3.3.1"
